[Unit]
Description=Gunicorn instance for Flask App
After=network.target

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/flask-chatbot/personal-chatbot
ExecStart=/home/ec2-user/flask-chatbot/personal-chatbot/scripts/run_app.sh
Restart=always

[Install]
WantedBy=multi-user.target